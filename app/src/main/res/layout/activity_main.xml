<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    tools:context=".MainActivity">

    <!-- Top bar: language selection -->
    <LinearLayout
        android:id="@+id/langBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/fromlanguage"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#2196F3"
            android:popupBackground="#FFFFFF"
            android:spinnerMode="dropdown" />

        <!-- Swap Button -->
        <ImageButton
            android:id="@+id/swap"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_swap_hor"
            android:contentDescription="Swap Languages"
            app:tint="#2196F3" />

        <Spinner
            android:id="@+id/tolanguage"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="#2196F3"
            android:popupBackground="#FFFFFF"
            android:spinnerMode="dialog"
            android:textAlignment="viewEnd" />
    </LinearLayout>

    <!-- Input Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_from"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@+id/langBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <EditText
                android:id="@+id/fromtext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter text"
                android:gravity="top|start"
                android:background="@android:color/transparent"
                android:inputType="textMultiLine"
                android:textSize="18sp"
                android:textColor="#111" />

            <ImageButton
                android:id="@+id/clearText"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="0dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Clear Text"
                app:tint="#888" />

            <ImageButton
                android:id="@+id/playSourceAudio"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Speaker"
                android:src="@drawable/ic_volume_up"
                android:visibility="invisible"
                app:tint="#2196F3" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Swap Animation Circle -->

    <!-- Output Card -->
    <ImageView
        android:id="@+id/swap_center"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_circle"
        android:elevation="6dp"
        android:padding="10dp"
        android:src="@drawable/ic_swap_vert"
        android:translationY="-12dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/card_to"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/card_from"
        app:tint="#2196F3" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_to"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@+id/swap_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/totext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#111"
                android:textSize="18sp"
                android:gravity="top|start"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/playDestinationAudio"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_volume_up"
                android:contentDescription="Speaker"
                app:tint="#2196F3" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Translate Button -->
    <Button
        android:id="@+id/translate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:backgroundTint="#2196F3"
        android:text="Translate"
        android:textColor="#FFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_to" />

</androidx.constraintlayout.widget.ConstraintLayout>
